- content_for :title do
  Adendas

#content-header
  %h1 Adendas
  - if can? :create, Addenda
    #action-links
      = link_to "Agregar una adenda", new_addenda_url

= render :partial => "shared/info"

#content-body
  %h2.first-header Listado de adendas

  %table
    %thead
      %tr
        %th Número
        %th Convenio
        %th Efector
        %th Inicio
        %th Última modificación
    %tbody
      - @addendas.each do |a|
        %tr.clickable{ :onclick => "location.href=\'#{addenda_path(a)}\'", :title => "Ver detalles de la adenda" }
          %td= a.numero.blank? ? "-" : a.numero
          %td= a.convenio_de_gestion.numero
          %td= a.convenio_de_gestion.efector.nombre
          %td= a.fecha_de_inicio.strftime("%d/%m/%Y")
          %td= a.updated_at.strftime("%d/%m/%Y %H:%M:%S")
  = will_paginate @addendas, :inner_window => 2, :outer_window => 0
