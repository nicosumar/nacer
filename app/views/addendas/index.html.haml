%h1 Adendas
%ul{:id => "submenu"}
  - if can? :create, Addenda
    %li= link_to "Agregar una adenda", new_addenda_url, :class => "drop"
%p    
%table
  %thead
    %tr
      %th Convenio
      %th Efector
      %th Inicio
  %tbody
    - @addendas.each do |a|
      %tr.clickable{ :onclick => "location.href=\'#{addenda_path(a)}\'", :title => "Ver detalles de la adenda al convenio #{a.convenio_de_gestion.numero} suscrita el #{a.fecha_de_suscripcion.strftime("%d/%m/%Y")}" }
        %td= a.convenio_de_gestion.numero
        %td= a.convenio_de_gestion.efector.nombre
        %td= a.fecha_de_inicio.strftime("%d/%m/%Y")
= will_paginate @addendas, :inner_window => 2, :outer_window => 0

