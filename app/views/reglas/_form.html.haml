= form_for(@regla) do |f|
  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :efector, 'Efector al que aplica'
    = f.select :efector_id, @efectores,{}, {:class => 'multi_select'}
  .field
    = f.label :nomenclador, 'Nomenclador'
    = f.select :nomenclador_id, @nomencladores
  .field
    = f.label :prestacion, 'Prestacion'
    = f.select :prestacion_id, @prestaciones
  .field
    = f.label :metodo_de_validacion, 'MÃ©todo de validacion'
    = f.select :metodo_de_validacion_id, @metodos_de_validacion
  .field
    = f.label :permitir
    = f.check_box :permitir
  .field
    = f.label :observaciones
    = f.text_field :observaciones
  .actions
    = f.submit