= form_for(@sucursal_bancaria) do |f|
  %div.field
    = f.label :banco_id, "Banco"
    = f.select :banco_id, @bancos,{}, {:class => 'select2'}
  %div.field
    = f.label :numero, "Número de sucursal: "
    = f.text_field :numero
  %div.field
    = f.label :nombre, "Denominacíon de la sucursal bancaria:"
    = f.text_field :nombre
  %div.field
    = f.label :pais_id, "Pais: "
    = f.select :pais_id, @paises,{}, {:class => 'select2'}
  %div.field
    = f.label :provincia_id, "Provincia: "
    = f.select :provincia_id, @provincias,{}, {:class => 'select2'}
  %div.field
    = f.label :departamento_id
    = f.select :departamento_id, @departamentos,{}, {:class => 'select2'}
  %div.field
    = f.label :distrito_id
    = f.select :distrito_id, @distritos, {}, {:class => 'select2'}
  %div.field
    = f.label :observaciones
    = f.text_area :observaciones
  .actions
    = f.submit