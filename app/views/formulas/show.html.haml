- content_for :title do
  Liquidaciones - Formulas

#content-header
  %h1 Formulas de liquidacion
  #action-links
    - if can? :read, Formula
      = link_to '<< Volver al listado', formulas_path
    - if can? :update, Formula
      = link_to 'Editar', edit_formula_path(@formula)

= render :partial => "shared/info", :locals => { :registro => @formula }
#content-body
  %div.field_content
    %span.field_name Activa:
    %span.field_value= @formula.activa
  %div.field_content
    %span.field_name Descripcion:
    %span.field_value= @formula.descripcion
  %div.field_content
    %span.field_name Formula:
    %span.field_value= @formula.formula
  %div.field_content
    %span.field_name Observaciones:
    %span.field_value= @formula.observaciones
