- content_for :title do
  Provincias

#content-header
  %h1 Provincias
  #action-links
    = link_to "Nueva Provincia", :action => "new"

-# Sidebar
#content-header
  #action-links
    = link_to "Listar Paises", :controller => "paises", :action => "index"
    = link_to "Listar Provincias", :controller => "provincias", :action => "index"
    = link_to "Listar Departamentos", :controller => "departamentos", :action => "index"
    = link_to "Listar Distritos", :controller => "distritos", :action => "index"

#content-body
  %h2.first-header Listado de provincias
  %table
    %thead
      %tr
        %th Id
        %th Nombre
        %th ID Bioestadistica
    %tbody
      - @provincias.each do |p|
        %tr
          %td= p.id
          %td= p.nombre
          %td= p.provincia_bio_id
  = will_paginate @provincias, :inner_window => 2, :outer_window => 0

        