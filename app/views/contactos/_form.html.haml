= form_for(@contacto) do |f|

  %h3.first-header Datos de identificación
  %div.field
    = f.label :mostrado, "Nombre mostrado*"
    = f.text_field :mostrado
  %div.field
    = f.label :apellidos, "Apellidos*"
    = f.text_field :apellidos
  %div.field
    = f.label :nombres, "Nombres*"
    = f.text_field :nombres
  %div.field
    = f.label :sexo_id, "Sexo*"
    = f.select :sexo_id, options_for_select(@sexos, @sexo_id), {:include_blank => true}, |
      {:class => "multi_select", :style => "width: 150px;", :"data-placeholder" => "Elija una opción"} |
  %div.field
    = f.label :tipo_de_documento_id, "Tipo de documento*"
    = f.select :tipo_de_documento_id, options_for_select(@tipos_de_documentos, @tipo_de_documento_id), {:include_blank => true}, |
      {:class => "multi_select", :style => "width: 270px;", :"data-placeholder" => "Elija una opción"} |
  %div.field
    = f.label :dni, "Número de documento**"
    = f.number_field :dni
  %div.field
    = f.label :email, "Dirección de correo electrónico*"
    = f.email_field :email
  %div.field
    = f.label :email_adicional
    = f.email_field :email_adicional

  %h3 Firma
  %div.field
    = f.label :firma_primera_linea, "Firma primera linea*"
    = f.text_field :firma_primera_linea
  %div.field
    = f.label :firma_segunda_linea, "Firma seguna linea*"
    = f.text_field :firma_segunda_linea
  %div.field
    = f.label :firma_tercera_linea, "Firma tercera linea*"
    = f.text_field :firma_tercera_linea

  %h3 Domicilio
  %div.field
    = f.text_area :domicilio, :size => "80x5"

  %h3 Teléfonos
  %div.field
    = f.label :telefono
    = f.text_field :telefono
  %div.field
    = f.label :telefono_movil
    = f.text_field :telefono_movil

  %h3 Observaciones
  %div.field
    = f.text_area :observaciones, :size => "80x5"

  %div.actions
    - if @contacto.new_record?
      = f.submit "Crear el contacto"
      = link_to "Cancelar", contactos_url
    - else
      = f.submit "Modificar el contacto"
      = link_to "Cancelar", @contacto
