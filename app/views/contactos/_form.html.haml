= form_for(@contacto) do |f|

  %h3 Datos de identificación
  %div.field
    = f.label :apellidos
    = f.text_field :apellidos
  %div.field
    = f.label :nombres
    = f.text_field :nombres
  %div.field
    = f.label :mostrado
    = f.text_field :mostrado
  %div.field
    = f.label :sexo_id
    = f.select :sexo_id, options_for_select(@sexos, @sexo_id), {:include_blank => true}
  %div.field
    = f.label :dni
    = f.number_field :dni
  %div.field
    = f.label :email
    = f.text_field :email
  %div.field
    = f.label :email_adicional
    = f.text_field :email_adicional

  %h3 Domicilio
  %div.field
    = f.text_area :domicilio, :size => "100x15"

  %h3 Teléfonos
  %div.field
    = f.label :telefono
    = f.text_field :telefono
  %div.field
    = f.label :telefono_movil
    = f.text_field :telefono_movil

  %h3 Observaciones
  %div.field
    = f.text_area :observaciones, :size => "100x15"

  %div.actions
    - if @contacto.persisted?
      = f.submit "Modificar el contacto"
    - else
      = f.submit "Crear el contacto"
