<div class="nested-fields">
  <%= collection_select :seccion_pdss, 
                        :seccion_pdss_id, 
                        SeccionPdss.all, 
                        :id, 
                        :nombre, 
                        (f.object.present? and f.object.grupo_pdss.present?) ? {selected: f.object.grupo_pdss.seccion_pdss_id} : {}, 
                        {class: "small-input seccion-pdss-select" } 
  %>  
  <%= f.collection_select :grupo_pdss_id, 
                          (f.object.present? and f.object.grupo_pdss.present?) ? f.object.grupo_pdss.seccion_pdss.grupos_pdss : SeccionPdss.first.grupos_pdss, 
                          :id, 
                          :nombre, 
                          {}, 
                          {class: "small-input grupo-pdss-select"} 
  %>  

  <%= f.collection_select :linea_de_cuidado_id, LineaDeCuidado.ordenadas, :id, :nombre_y_codigo, {prompt: 'Sin línea de cuidado'}, {class: "small-input"} %>     
  <%= f.collection_select :modulo_id, Modulo.all, :id, :nombre, {prompt: 'Sin módulo'}, {class: "small-input"} %>
</div>
