<% if prestaciones_pdss.present? %>
  <table>
    <tr>
      <th>Sección PDSS</th>
      <th>Grupo PDSS</th> 
      <th>Linea de cuidado</th>
      <th>Tipo de prestación</th>
      <th>Módulo</th>
      <th>Acciones</th>
    </tr>
    <% prestaciones_pdss.reverse.each do |prestacion_pdss| %>
      <tr style="border-top-width: 5px;"><td colspan="6"><strong><%= prestacion_pdss.nombre %></strong></td></tr>
      <tr>
        <td><%= prestacion_pdss.decorate.nombre_de_la_seccion %></td>
        <td><%= obtener_nombre prestacion_pdss.grupo_pdss %></td>
        <td><%= obtener_nombre prestacion_pdss.linea_de_cuidado %></td>
        <td><%= obtener_nombre prestacion_pdss.tipo_de_prestacion %></td>
        <td><%= obtener_nombre prestacion_pdss.modulo %></td>
        <td>
          <%= link_to "Ver", prestacion_path(prestacion_pdss.prestaciones.first) %>
          <%= link_to "Editar", edit_prestacion_path(prestacion_pdss.prestaciones.first) %>
        </td> 
      </tr>
    <% end %>
  </table>
<% else %>
  (Sin prestaciones pdss asociadas)
<% end %>