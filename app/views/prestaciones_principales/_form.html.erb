<%= form_for :validator, method: :get, url: @prestacion_principal.id.present? ? edit_prestacion_principal_path(@prestacion_principal) : new_prestacion_principal_path do |f| %>
  <div class="row">
    <div class="col-md-3">
      <div>Código</div>
      <%= collection_select :validator, :objeto_de_la_prestacion_id, ObjetoDeLaPrestacion.all, :id, :full_codigo_y_nombre, {}, {class: "medium-label"} %>
    </div>
    <div class="col-md-3">
      <div>Diagnóstico</div>
      <%= collection_select :validator, :diagnostico_id, Diagnostico.all, :id, :nombre_y_codigo, {}, {class: "medium-label"} %> 
    </div>
    <div class="col-md-3">
      <div>Buscar prestaciones existentes</div>
      <%= f.submit "Sin prestación principal", class: "medium-label" %>
    </div>
  </div>
<% end %>
  <hr>

<%= form_for @prestacion_principal do |f| %>

  <h3>Información de la prestación principal</h3>

  <h4>Nombre</h4>
  <div class="field">
    <%= f.text_field :nombre %>     
  </div>

  <br>
  <br>

  <h4>Prestaciones del plan de salud</h4>
  <div id="prestaciones">
    <%= f.fields_for :prestaciones do |prestacion|  %>
      <%= render 'prestacion_fields', f: prestacion  %>
    <% end %>
    <br>
    <div class="links">
      <%= link_to_add_association 'agregar', f, :prestaciones  %>
    </div>
  </div>

  <%= f.submit "Guardar" %>
<% end %>
<%= javascript_include_tag 'prestaciones_principales/_form.js' %>