= stylesheet_link_tag"entradas.css"
- content_for :title do
  Liquidaciones Sumar - Ver

#content-header
  %h1 Liquidaciones Sumar - Ver
  #action-links
    - if can? :read, LiquidacionSumar
      = link_to '<< Volver al listado', liquidaciones_sumar_path
    - if can? :update, LiquidacionSumar
      = link_to 'Editar', edit_liquidacion_sumar_path(@liquidacion_sumar)

= render :partial => "shared/info", :locals => { :registro => @liquidacion_sumar }

#content-body
  %table
    %tr
      %td
        %b Liquidacion:
      %td{:colspan => "3"}
        %span.field_value= @liquidacion_sumar.descripcion
    %tr
      %td
        %b Concepto:
      %td
        %span.field_value= @liquidacion_sumar.concepto_de_facturacion.descripcion
      %td 
        %b Periodo:
      %td
        %span.field_value= @liquidacion_sumar.periodo.periodo
    %tr
      %td 
        %b Plantilla de reglas:
      %td{:colspan => "2"}
        - unless @liquidacion_sumar.plantilla_de_reglas.blank?
          %span.field_value= @liquidacion_sumar.plantilla_de_reglas.nombre
        - else
          = button_to 'Crear nueva plantilla', new_plantilla_de_reglas_path, method: "get"
      %td{colspan: 2}= button_to 'Ver plantilla', @liquidacion_sumar.plantilla_de_reglas, method: "get" unless @liquidacion_sumar.plantilla_de_reglas.blank?
    %tr
      %td
        %b Grupo de Efectores:
      %td
        %span.field_value= @liquidacion_sumar.grupo_de_efectores_liquidacion.grupo
      %td{colspan: "2"}= button_to 'Ver grupo', @liquidacion_sumar.grupo_de_efectores_liquidacion, method: "get"
    %tr
      %td{colspan: "4"} &nbsp;
    %tr
      %td{colspan: "4"}
        %table
          %tr
            %td= button_to 'Modificar parametros', edit_parametro_liquidacion_sumar_path(@liquidacion_sumar.parametro_liquidacion_sumar),:method => "get"
            %td=button_to "Vaciar Liquidacion", vaciar_liquidacion_liquidacion_sumar_path(@liquidacion_sumar), method: :delete
            %td=button_to "Procesar Liquidacion", procesar_liquidacion_liquidacion_sumar_path(@liquidacion_sumar), method: :post
            %td Ver Liquidacion
            %td Crear CuasiFactura
