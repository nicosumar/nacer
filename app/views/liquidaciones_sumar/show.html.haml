= stylesheet_link_tag"entradas.css"
- content_for :title do
  Liquidaciones Sumar - Ver

#content-header
  %h1 Liquidaciones Sumar - Ver
  #action-links
    - if can? :read, LiquidacionSumar
      = link_to '<< Volver al listado', liquidaciones_sumar_path
    - if can? :update, LiquidacionSumar
      = link_to 'Editar', edit_liquidacion_sumar_path(@liquidacion_sumar)

= render :partial => "shared/info", :locals => { :registro => @liquidacion_sumar }

#content-body
  %table
    %tr
      %td
        %b Liquidacion:
      %td{:colspan => "3"}
        %span.field_value= @liquidacion_sumar.descripcion
    %tr
      %td
        %b Concepto:
      %td
        %span.field_value= @liquidacion_sumar.concepto_de_facturacion.descripcion
      %td 
        %b Periodo:
      %td
        %span.field_value= @liquidacion_sumar.periodo.periodo
    %tr
      %td 
        %b Plantilla de reglas:
      %td{:colspan => "2"}
        %span.field_value= @liquidacion_sumar.plantilla_de_reglas.nombre unless @liquidacion_sumar.plantilla_de_reglas.blank?
      %td= button_to 'Ver plantilla', @liquidacion_sumar.plantilla_de_reglas, method: "get" unless @liquidacion_sumar.plantilla_de_reglas.blank?
    %tr
      %td 
        %b Grupo de Efectores:
      %td{:colspan => "2"}
        %span.field_value= @liquidacion_sumar.grupo_de_efectores_liquidacion.grupo
      %td= button_to 'Ver grupo', @liquidacion_sumar.grupo_de_efectores_liquidacion, method: "get"
    %tr
      %td 
        %b Formula:
      %td{:colspan => "2"}
        %span.field_value= @liquidacion_sumar.formula.descripcion
      %td= button_to 'Ver formula de cÃ¡lculo', @liquidacion_sumar.formula,:method => "get"
    %tr
      %td{colspan: "4"} &nbsp;
    %tr
      %td &nbsp;
