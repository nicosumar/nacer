- content_for :title do
  Resultados del proceso de cierre

#content-header
  %h1 Resultados del proceso de cierre

= render :partial => "shared/info"

#content-body
  %h2.first-header Novedades procesadas

  %p= @primero_del_mes_siguiente
  - @uads_a_procesar.each do |k|
    %p= k

  -# if @uads.size > 0
    = form_tag('padrones/cierre', :method => :post) do
      %div.hidden_field
        %input{ :id => "proceso_id", :name => "proceso_id", :type => "hidden", :value => 3 }
      %div.hidden_field
        %input{ :id => "primero_del_mes_siguiente", :name => "primero_del_mes_siguiente", |
          :type => "hidden", :value => @primero_del_mes_siguiente.strftime('%Y-%m-%d')} |
        
      %table
        %thead
          %tr
            %th Codigo
            %th Nombre
            %th Pendientes
            %th Â¿Procesar?
        %tbody
          - @uads.each do |uad|
            %tr
              %td= uad[:codigo]
              %td= uad[:nombre]
              %td= uad[:a_procesar].to_s
              %td= check_box_tag("uads_a_procesar[uad_#{uad[:codigo]}]".to_sym, 1, :checked => "checked")

      %div.actions
        = submit_tag("Procesar")
