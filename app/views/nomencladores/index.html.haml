- content_for :title do
  Nomencladores
#content-header
  %h1 Nomencladores
  #action-links
    - if can? :create, Nomenclador
      = link_to 'Nuevo Nomenclador', new_nomenclador_path

#content-body
  %table
    %tr
      %th Nomenclador
      %th Fecha de inicio
      %th Estado
      %th{colspan: '3'} Acciones
    - @nomencladores.each do |nomenclador|
      %tr
        %td= nomenclador.nombre
        %td= nomenclador.fecha_de_inicio
        %td= (nomenclador.activo ? "Activo" : "Inactivo")
        %td= link_to 'Ver', nomenclador_path(nomenclador)
        %td= link_to 'Editar', edit_nomenclador_path(nomenclador)
        %td= link_to 'Borrar', nomenclador, method: :delete, data: { confirm: "Â¿Esta seguro que desea eliminar el nomenclador #{nomenclador.nombre}?" }
  = will_paginate @nomencladores, :inner_window => 2, :outer_window => 0


