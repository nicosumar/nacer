<% content_for :title do %>
  Nomenclador
<% end %>

<div id="content-header">
  <h1>Seleccionar un grupo del plan de salud</h1>
  <div id="action-links">
    <%= link_to '<< Volver al listado', nomencladores_path %>
  </div>
</div>

<div id="content-body">
  
  <% @secciones_pdss.each do |seccion_pdss| %>
    <h3><%= seccion_pdss.codigo + " - " + seccion_pdss.nombre %></h3>
    <% seccion_pdss.grupos_pdss.each do |grupo_pdss| %>
      <span><%= "  " + grupo_pdss.codigo + " - " + grupo_pdss.nombre %> <%= link_to ' Asignar precios >>', new_asignar_precios_por_grupo_pdss_nomenclador_path(@nomenclador, grupo_pdss) %></span><br />
    <% end %>
    <hr> 
  <% end %>


</div>