<% content_for :title do %>
  Prestaciones
<% end %>

<div id="content-header">
  <h1>Prestaciones</h1>
  <div id="action-links"><%= link_to('<<  Volver al listado', prestaciones_path) if can? :read, Prestacion %> </div>  
</div>

<div id="content-body">
  <h3>Datos de la prestación</h3>
  <div class='field_content'>
    <span class='field_name'>Código</span>
    <span class='field_value'><%= @prestacion.codigo %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>Nombre</span>
    <span class='field_value'><%= @prestacion.nombre %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>Unidad de medida</span>
    <span class='field_value'><%= @prestacion.unidad_de_medida.nombre %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>Unidades máximas</span>
    <span class='field_value'><%= @prestacion.unidades_maximas %></span>
  </div> 
  <div class='field_content'>
    <span class='field_name'>¿Otorga cobertura?</span>
    <span class='field_value'><%= @prestacion.otorga_cobertura ? "Si" : "No" %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>¿Es comunitaria?</span>
    <span class='field_value'><%= @prestacion.comunitaria ? "Si" : "No" %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>¿Requiere historia clínica?</span>
    <span class='field_value'><%= @prestacion.requiere_historia_clinica ? "Si" : "No" %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>¿Es catastrófica?</span>
    <span class='field_value'><%= @prestacion.es_catastrofica ? "Si" : "No" %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>¿Modifica lugar de atención?</span>
    <span class='field_value'><%= @prestacion.modifica_lugar_de_atencion ? "Si" : "No" %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>Objeto de la prestación</span>
    <span class='field_value'><%= @prestacion.objeto_de_la_prestacion.present? ? @prestacion.objeto_de_la_prestacion.nombre : "Sin especificar" %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>Concepto de facturación</span>
    <span class='field_value'><%= @prestacion.concepto_de_facturacion.present? ? @prestacion.concepto_de_facturacion.concepto : "Sin especificar" %></span>
  </div>
  <div class='field_content'>
    <span class='field_name'>Concepto de facturación</span>
    <span class='field_value'><%= @prestacion.tipo_de_tratamiento.present? ? @prestacion.tipo_de_tratamiento.nombre : "Sin especificar" %></span>
  </div>

  <hr>

  <div class='field_content'>
    <span class='field_name'>Sexos</span>
    <span class='field_value'><%= @prestacion.nombre_de_los_sexos %></span>
  </div>


  <div class='field_content'>
    <span class='field_name'>Grupos poblacionales</span>
    <span class='field_value'><%= @prestacion.nombre_de_los_grupos_poblacionales %></span>
  </div>

  <div class='field_content'>
    <span class='field_name'>Documentaciones respaldatorias</span>
    <span class='field_value'><%= @prestacion.nombre_de_las_documentaciones_respaldatorias %></span>
  </div>


</div>


