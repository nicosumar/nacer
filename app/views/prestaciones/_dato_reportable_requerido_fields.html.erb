<div class="nested-fields">
  <%= f.collection_select :dato_reportable_id, DatoReportable.all, :id, :codigo_y_nombre, {}, {class: "medium-input"} %> 
  <%= f.text_field :fecha_de_inicio, {class: "medium-input", type: "date"} %>
  <%= f.text_field :fecha_de_finalizacion, {class: "medium-input", type: "date"} %>
  <%= f.number_field :minimo, {class: "xsmall-number-field"} %>
  <%= f.number_field :maximo, {class: "xsmall-number-field"} %>
  <%= link_to_remove_association "borrar", f %>
  <br />
  Necesario: <%= f.check_box :necesario %> 
  Obligatorio: <%= f.check_box :obligatorio %> 
  <hr>
</div>